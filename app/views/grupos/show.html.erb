<h4>Cuentas</h4>
<table class="table table-hover">
  <thead>
  <tr class="row">
    <th>Numero</th>
    <th>Nombre</th>
    <th>Acciones</th>
  </tr>
  </thead>
  <tbody>
  <% @cuentas.each do |cuenta|  %>
      <tr class="row">
        <form action="<%=cuentum_path(cuenta) %>" method="post">
          <input type="hidden" name="_method" value="patch" />
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">


          <div class="input-group ">
            <td class="col-sm-1">
              <input type="number" name="cuentum[number]" value="<%= cuenta.number %>" class="form-control input-sm" id="number<%=cuenta.id%>" disabled >
            </td>
            <td class="col-sm-3">
              <input type="text" name="cuentum[name]" value="<%= cuenta.name %>" class="form-control" id="name<%=cuenta.id%>" disabled>
            </td>
            <td class="col-sm-1">
              <button type="submit" class="btn btn-success save-button-list" id="guardar<%=cuenta.id%>">Guardar</button>
            </td>
          </div>
        </form>
        <td class="col-sm-1">
          <%= link_to  "Ver",cuenta%>
        </td>

        <td class=" col-sm-1">
          <button class="btn btn-info edit-button-list" id="<%=cuenta.id%>" onclick="activateSaveButton(this)">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar
          </button>
        </td>
        <td class="col-sm-1">
          <%= link_to  cuenta,role: 'button' ,class: 'btn btn-danger', method: :delete, data: { confirm: 'Estas seguro?' } do %>
              <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span> Borrar

          <% end %>
        </td>

      </tr>
  <%end%>

  </tbody>
</table>

<%= link_to 'Agregar cuenta', new_grupo_cuentum_path(@grupo), remote: true%> <br>
<%= link_to 'Edit', edit_grupo_path(@grupo) %> |

<br>

<div id="cuenta-form"></div>
