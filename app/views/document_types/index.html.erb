<p id="notice"><%= notice %></p>
<%= render 'layouts/breadcrumb', titles: [['Menu',menu_path], ['Settings',settings_path]]%>
<h1>Tipos de documento</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Abreviatura</th>
      <th>Nombre</th>
      <th>Codigo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @document_types.each do |document_type| %>
      <tr>
        <td><%= document_type.abbreviation %></td>
        <td><%= document_type.name %></td>
        <td><%= document_type.code%></td>
        <td><%= link_to 'Ver', document_type %></td>
        <td><%= link_to 'Editar', edit_document_type_path(document_type) %></td>
        <td><%= link_to 'Borrar', document_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo tipo de documento', new_document_type_path %>
