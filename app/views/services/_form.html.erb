<%= form_for(service) do |f| %>
  <% if service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
      <% service.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name ,'Nombre'%>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :account_auxiliar_id, 'Cuenta auxiliar' %>

    <%= autocomplete_field_tag 'auxiliar_number_text',
                               '', autocomplete_auxiliar_number_text_services_path,
                               class: 'form-control', update_elements: {id: "#service_auxiliar_id"} %>

    <%= f.hidden_field :auxiliar_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :cost_centre_id, 'Centro de costos' %>
    <%= f.text_field :cost_centre_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :taxable_income, 'Entrada gravable' %>
    <%= f.number_field :taxable_income, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :account_IVA_id, 'Cuenta IVA' %>
    <%= autocomplete_field_tag 'auxiliar_account_IVA',
                               '', autocomplete_auxiliar_number_text_services_path,
                               class: 'form-control', update_elements: {id: "#service_account_IVA_id"} %>

    <%= f.hidden_field :account_IVA_id%>
  </div>

  <div class="form-group">
    <%= f.label :account_withholding_tax_id, 'Cuenta retención en la fuente' %>
    <%= autocomplete_field_tag 'auxiliar_account_withholding_tax_id',
                               '', autocomplete_auxiliar_number_text_services_path,
                               class: 'form-control', update_elements: {id: "#service_account_withholding_tax_id"} %>
    <%= f.hidden_field :account_withholding_tax_id %>
  </div>

  <div class="form-group">
    <%= f.label :account_withholding_tax_ICA_id, 'Cuenta retención en la fuente ICA' %>
    <%= autocomplete_field_tag 'auxiliar_account_withholding_tax_ICA_id',
                               '', autocomplete_auxiliar_number_text_services_path,
                               class: 'form-control', update_elements: {id: "#service_account_withholding_tax_ICA_id"} %>
    <%= f.hidden_field :account_withholding_tax_ICA_id %>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
