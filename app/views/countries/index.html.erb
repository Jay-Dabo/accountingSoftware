<p id="notice"><%= notice %></p>

<h1>Welcome!</h1>
<%= form_for '' do |f| %>
<%= f.autocomplete_field :country_name, autocomplete_country_name_countries_path, update_elements: {id: '#id_element', created_at: '#some_other_element', code: '#code'},
                         class: 'form-control', onclick: "addClassByClick(this)" %>
<%= f.text_field :some_other_element , id:'some_other_element', class: 'form-control'  %>
<%= f.text_field :id , id:'id_element', class: 'form-control'  %>
    <%= f.number_field :code , id:'code', class: 'form-control'  %>
<% end %>


<h1>Countries</h1>

<table class="table table-hover">
  <thead>
    <tr class="row">
      <th class="col-sm-1">Code</th>
      <th class="col-sm-2">Name</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr class="row">
        <td class="col-sm-1"><%= country.code %></td>
        <td class="col-sm-2"><%= country.name %></td>
        <td class="col-sm-1"><%= link_to 'Ver', country %></td>
        <td class="col-sm-1"><%= link_to edit_country_path(country),role: "button", class: "btn btn-info edit-button-list" do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar
        <% end %>
        </td>
        <td class="col-sm-1"><%= link_to  country,role: 'button' ,class: 'btn btn-danger', method: :delete, data: { confirm: 'Estas seguro?' } do %>
              <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span> Borrar
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<nav>
  <%= will_paginate @posts %>

</nav>

<br>

<%= link_to 'New Country', new_country_path %>
